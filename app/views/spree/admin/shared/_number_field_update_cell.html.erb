  <span class="js-number-update-text" <%= 'hidden' if rejection_reason.present? %>><%= number_value %></span>
  <%= number_field_tag field_tag, number_value, id: "#{field_tag.to_s}_#{resource_id}", class: 'fullwidth js-number-update-input' %>
</td>
