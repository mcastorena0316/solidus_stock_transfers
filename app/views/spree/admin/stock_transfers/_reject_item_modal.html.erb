<%= hidden_field_tag :stock_transfer_number, @stock_transfer.number %>
<div class="modal fade" id="reject-transfer-items" role="dialog" aria-labelledby="reject-transfer-items" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reject-transfer-items">Reject Transfer Item</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="rejection_reason">Rejection Reason</label>
          <select name="rejection_reason" id="rejection_reason" class="custom-select">
            <option value="Destoyed" selected>Destroyed</option>
            <option value="Lost">Lost</option>
            <option value="Damaged">Damaged</option>
            <option value="Other">Other</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-transfer-item-id data-action="reject-item">Save changes</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>